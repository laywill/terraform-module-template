{
  "name": "Terraform Development Container",
  "image": "mcr.microsoft.com/vscode/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/terraform:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "hashicorp.terraform",
        "ms-azuretools.vscode-docker",
        "eamodio.gitlens",
        "ms-vscode-remote.remote-containers",
        "mhutchie.git-graph"
      ],
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
      }
    }
  },
  "postCreateCommand": "terraform -install-autocomplete",
  "remoteUser": "vscode",
  "mounts": [
    "source=${localWorkspaceFolder}/.terraform,target=/workspaces/.terraform,type=bind,consistency=cached"
  ],
  "forwardPorts": [],
  "remoteEnv": {},
  "workspaceFolder": "/workspaces/terraform-project",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/terraform-project,type=bind,consistency=cached"
}
